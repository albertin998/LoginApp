<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editNomeContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Contato" />

        <EditText
            android:id="@+id/editTelefonePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone Principal"
            android:inputType="phone"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTelefoneSecundario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone Secundário"
            android:inputType="phone"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editEmailContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço completo (Rua, Quadra, Lote, Bairro, Cidade, Estado, CEP)"
            android:inputType="textPostalAddress"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSalvarContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Contato"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
